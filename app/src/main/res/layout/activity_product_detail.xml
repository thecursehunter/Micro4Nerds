<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- 1. TOOLBAR (CỐ ĐỊNH Ở ĐỈNH) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:minHeight="70dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 2. NỘI DUNG CUỘN (Ở GIỮA) -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@id/containerToolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Padding đáy 120dp để nội dung không bị BottomNav che mất -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="120dp">

            <!-- A. ẢNH SẢN PHẨM (Hình chữ nhật to) -->
            <ImageView
                android:id="@+id/imgProductDetail"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:scaleType="centerCrop"
                android:src="@drawable/banner_1"
                android:background="@android:color/white" />

            <!-- B. THÔNG TIN (Padding 2 bên cho thoáng) -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Tên sản phẩm -->
                <TextView
                    android:id="@+id/tvDetailName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên Sản Phẩm"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:fontFamily="serif" />

                <!-- Stock (Chữ mờ) -->
                <TextView
                    android:id="@+id/tvDetailStock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Còn 10 sản phẩm trong cửa hàng"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <!-- Giá -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Giá sản phẩm:"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/tvDetailPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5.000.000 đ"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- C. KHU VỰC HÀNH ĐỘNG (NÚT BẤM HOẶC THÔNG BÁO HẾT HÀNG) -->
            <!-- 1. Hộp chứa 3 nút (Thêm ID: layoutActions) -->
            <LinearLayout
                android:id="@+id/layoutActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:gravity="center_vertical"
                android:weightSum="10"
                android:visibility="visible"> <!-- Mặc định là hiện -->

                <!-- Nút MUA NGAY (Chiếm 4 phần) -->
                <Button
                    android:id="@+id/btnBuyNow"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="MUA NGAY"
                    android:textStyle="bold"
                    android:backgroundTint="@android:color/black"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"/>

                <!-- Khoảng cách -->
                <View android:layout_width="8dp" android:layout_height="1dp"/>

                <!-- Nút THÊM GIỎ (Chiếm 4 phần) -->
                <Button
                    android:id="@+id/btnAddToCart"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:text="THÊM VÀO GIỎ"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    app:strokeColor="@android:color/black"
                    app:strokeWidth="1dp"/>

                <!-- Icon TIM (Chiếm 2 phần) -->
                <ImageView
                    android:id="@+id/btnHeart"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="2"
                    android:src="@drawable/ic_heart_1"
                    app:tint="@android:color/black"
                    android:padding="8dp"/>
            </LinearLayout>

            <!-- 2. Thông báo Hết Hàng (Mặc định là ẩn - GONE) -->
            <TextView
                android:id="@+id/tvOutOfStockMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SẢN PHẨM HIỆN ĐÃ HẾT HÀNG"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:padding="16dp"
                android:background="#FFF0F0"
                android:visibility="gone"/>

            <!-- D. MÔ TẢ SẢN PHẨM -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mô tả sản phẩm"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:fontFamily="serif"/>

                <TextView
                    android:id="@+id/tvDetailDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Nội dung mô tả chi tiết sản phẩm sẽ hiển thị ở đây..."
                    android:textColor="#424242"
                    android:textSize="15sp"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 3. BOTTOM NAVIGATION (CỐ ĐỊNH Ở ĐÁY) -->
    <include
        android:id="@+id/bottomNav"
        layout="@layout/layout_bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>