<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <!-- 1. TOOLBAR (CỐ ĐỊNH Ở ĐỈNH) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/containerToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:elevation="4dp"
        android:minHeight="70dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 2. KHUNG CHIA ĐÔI MÀN HÌNH (Nằm giữa Toolbar và BottomNav) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/containerToolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- CỘT TRÁI: ẢNH SẢN PHẨM (Chiếm 50%) -->
        <!-- scaleType="fitCenter": Để ảnh trọn vẹn, không bị cắt mất góc khi màn hình lùn -->
        <ImageView
            android:id="@+id/imgProductDetail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:background="@android:color/white"
            android:src="@drawable/banner_1"
            android:padding="8dp"/>

        <!-- CỘT PHẢI: THÔNG TIN (Chiếm 50% - Có cuộn) -->
        <androidx.core.widget.NestedScrollView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:paddingBottom="100dp"> <!-- Padding đáy để không bị BottomNav che -->

                <!-- Tên -->
                <TextView
                    android:id="@+id/tvDetailName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tên Sản Phẩm"
                    android:textColor="@android:color/black"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:fontFamily="serif" />

                <!-- Stock -->
                <TextView
                    android:id="@+id/tvDetailStock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Còn hàng"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:textStyle="italic" />

                <!-- Giá -->
                <TextView
                    android:id="@+id/tvDetailPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="5.000.000 đ"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- Nút bấm (Hộp) -->
                <LinearLayout
                    android:id="@+id/layoutActions"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:weightSum="10">

                    <Button
                        android:id="@+id/btnBuyNow"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="MUA"
                        android:backgroundTint="@android:color/black"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"/>

                    <View android:layout_width="4dp" android:layout_height="1dp"/>

                    <Button
                        android:id="@+id/btnAddToCart"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="GIỎ HÀNG"
                        android:backgroundTint="@android:color/white"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        app:strokeColor="@android:color/black"
                        app:strokeWidth="1dp"/>

                    <ImageView
                        android:id="@+id/btnHeart"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="2"
                        android:src="@drawable/ic_heart"
                        app:tint="@android:color/black"
                        android:padding="8dp"/>
                </LinearLayout>

                <!-- Thông báo hết hàng -->
                <TextView
                    android:id="@+id/tvOutOfStockMsg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HẾT HÀNG"
                    android:textColor="@android:color/holo_red_dark"
                    android:gravity="center"
                    android:padding="10dp"
                    android:background="#FFF0F0"
                    android:visibility="gone"/>

                <!-- Mô tả -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mô tả sản phẩm"
                    android:layout_marginTop="16dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tvDetailDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Nội dung mô tả..."
                    android:textColor="#424242"
                    android:textSize="14sp"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>